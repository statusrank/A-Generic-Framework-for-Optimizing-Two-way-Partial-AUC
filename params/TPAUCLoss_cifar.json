{
	"model": {
		"model_type": "resnet20",
		"num_classes": 1
	},
	"dataset": {
		"data_dir": "./data/",
		"input_size": [32, 32],
		"norm_params": {
			"mean": [123.675, 116.280, 103.530],
			"std": [58.395, 57.120, 57.375]
		},
		"use_lmdb": true,
		"lmdb_dir": "./data/lmdb/",
		"sampler": {
			"rpos": 1,
			"rneg": 10
		},
		"npy_style": true,
		"aug": true, 
		"class2id": {
			"0": 0, "1": 0, "2": 1, "3": 0, "4": 0,
			"5":0, "6": 0, "7": 0, "8": 0, "9": 0
		}
	},
	"training": {
		"train_batch_size": 128,
		"test_batch_size": 256,
		"num_workers": 4,
		"loss_type": "TPAUCLoss",
		"loss_params": {"gamma": 0.01, "reduction": "mean", "epoch_to_paced": 8,
			"re_scheme" : "Poly", "norm": false},
		"lr": 5e-4,
		"weight_decay": 1e-5,
		"momentum": 0.9,
		"nesterov": true,
		"lr_decay_rate": 0.99,
		"lr_decay_epochs": 1,
		"epoch_num": 50,
		"metric_params": {
			"alpha": 0.3,
			"beta": 0.3
		},
		"save_path": "./save/",
		"seed": 7
	}
}
